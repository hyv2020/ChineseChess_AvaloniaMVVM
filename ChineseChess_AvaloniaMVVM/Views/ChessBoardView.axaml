<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ChineseChess_AvaloniaMVVM.Views.ChessBoardView"
			 xmlns:vm="using:ChineseChess_AvaloniaMVVM.ViewModels"
			 x:DataType="vm:ChessBoardViewModel"
			 Background="Yellow">
	<Design.DataContext>
		<vm:ChessBoardViewModel/>
	</Design.DataContext>
	<Grid RowDefinitions="*,*,*" ColumnDefinitions="*,*,*">
		<TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Message}" TextAlignment="Center" Background="Blue" Foreground="White" Padding="10"/>
	</Grid>
</UserControl>
