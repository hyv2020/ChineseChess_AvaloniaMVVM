<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ChineseChess_AvaloniaMVVM.Views.ChessBoardUserControlView"
			 xmlns:vm="using:ChineseChess_AvaloniaMVVM.ViewModels"
			 xmlns:models="using:ChineseChess_AvaloniaMVVM.Models"
			 x:DataType="vm:ChessBoardUserControlViewModel"
			 
			 Background="Yellow">
	<Design.DataContext>
		<vm:ChessBoardUserControlViewModel/>
	</Design.DataContext>

	<Grid x:Name="cb">
		<ItemsControl ItemsSource="{Binding GridVm}"
					  HorizontalAlignment="Center"
					  VerticalAlignment="Center">
			<!-- Set the DataTemplate -->
			<ItemsControl.ItemTemplate>
				<DataTemplate DataType="vm:CellViewModel">
					<Rectangle Fill="Black"
					DataContext="{Binding Cell}"
					   Margin="10"
					   Width="20"
					   Height="20"
					   PointerPressed="Rectangle_PointerPressed"/>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
			<!-- Use a custom ItemsPanel to get 8 items in a row -->
			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<UniformGrid Columns="{Binding RowCount}" />
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>
		</ItemsControl>
	</Grid>
</UserControl>
